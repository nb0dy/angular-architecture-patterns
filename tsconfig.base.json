{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular-architecture-patterns/core/window": [
        "libs/core/window/src/index.ts"
      ],
      "@angular-architecture-patterns/core/endpoint": [
        "libs/core/endpoint/src/index.ts"
      ],
      "@angular-architecture-patterns/core/mock": [
        "libs/core/mock/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
